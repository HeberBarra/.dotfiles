[include]
  path = "~/.gitconfig.local"
  path = "~/GitHub/delta/catppuccin.gitconfig"
[user]    
  name = Heber F Barra
  email = heberferreirabarra@gmail.com
[commit]
  gpgsign = true
[pull]
  rebase = true
[core]
  excludesFile = ~/.gitignore
  pager = delta
[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = true
  pager = true
[delta]
  navigate = true
  line-numbers = true
  features = catppuccin-macchiato
[init]
  defaultBranch = main
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
